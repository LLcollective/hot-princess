{
  "rewrites": [
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/:path",
      "destination": "/:path.html"
    }
  ],\
  "redirects": [
    {
      "source": "/:path*/",
      "destination": "/:path*",
      "permanent": true
    },
    {
      "source": "/:path.html",
      "destination": "/:path",
      "permanent": true
    }
  ]
}
